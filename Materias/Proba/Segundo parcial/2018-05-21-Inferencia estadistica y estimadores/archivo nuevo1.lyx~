\begin_layout Standard

\series bold
Definiciónes
\end_layout

\begin_layout Standard

\bar under
Propiedades deseables de un estimador
\end_layout

\begin_layout Standard
-ser insesgado
\end_layout

\begin_layout Standard
-ser consistente
\end_layout

\begin_layout Standard
\begin_inset Formula $\theta$
\end_inset

 : parámetro poblacional
\end_layout

\begin_layout Standard
\begin_inset Formula $\Theta$
\end_inset

 : estimador de 
\begin_inset Formula $\theta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\Theta$
\end_inset

 es un estimador 
\series bold
insesgado
\series default
 de 
\begin_inset Formula $\theta$
\end_inset

si 
\end_layout

\begin_layout Standard
E(
\begin_inset Formula $\Theta$
\end_inset

)=
\begin_inset Formula $\theta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\Theta$
\end_inset

 es un estimador 
\series bold
consistente
\series default
 de 
\begin_inset Formula $\theta$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\forall\epsilon$
\end_inset

>0: P(|
\begin_inset Formula $\Theta$
\end_inset

-
\begin_inset Formula $\theta$
\end_inset

|>
\begin_inset Formula $\epsilon$
\end_inset

)
\begin_inset Formula $\begin{array}{cc}
\rightarrow\\
n\rightarrow\infty
\end{array}0$
\end_inset


\end_layout

\begin_layout Standard
esto es 
\end_layout

\begin_layout Standard
\begin_inset Formula $\Theta\rightarrow$
\end_inset


\begin_inset Formula $\theta$
\end_inset

 (converge en probabilidad)
\end_layout

\begin_layout Standard

\series bold
NOTA:
\end_layout

\begin_layout Standard
Desigualdad de Tchebycheff
\end_layout

\begin_layout Standard
X v.a.
 con 
\begin_inset Formula $\mu=E(X)$
\end_inset

 ; 
\begin_inset Formula $\sigma(X)=\sigma$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\mu$
\end_inset

 y 
\begin_inset Formula $\sigma$
\end_inset

 finitas
\end_layout

\begin_layout Standard
t 
\begin_inset Formula $\epsilon\mathbb{R}^{+}$
\end_inset

: P(|X-
\begin_inset Formula $\mu$
\end_inset

|>t
\begin_inset Formula $\sigma$
\end_inset

)
\begin_inset Formula $\leq$
\end_inset


\begin_inset Formula $\frac{1}{t^{2}}$
\end_inset


\end_layout

\begin_layout Standard
tiene sentido si t > 1
\end_layout

\begin_layout Standard
Ejemplo si t = 3
\end_layout

\begin_layout Standard
P(|X-
\begin_inset Formula $\mu$
\end_inset

|>3
\begin_inset Formula $\sigma$
\end_inset

)
\begin_inset Formula $\leq$
\end_inset


\begin_inset Formula $\frac{1}{9}$
\end_inset


\end_layout

\begin_layout Standard
por complemento:
\end_layout

\begin_layout Standard
P(|X-
\begin_inset Formula $\mu$
\end_inset

|
\begin_inset Formula $\leq$
\end_inset

3
\begin_inset Formula $\sigma$
\end_inset

)
\begin_inset Formula $\geq\frac{8}{9}\approx0.89$
\end_inset


\end_layout

\begin_layout Standard
lo interesante es que vale para cualquier variable aleatoria
\end_layout

\begin_layout Standard
Por ejemplo 
\end_layout

\begin_layout Standard
\begin_inset Formula $\overline{X}$
\end_inset

 ; 
\begin_inset Formula $\mu=E(\overline{X})=E(X)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\sigma(\overline{X})=\frac{\sigma(X)}{\sqrt{n}}=\frac{\sigma}{\sqrt{n}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\epsilon>0$
\end_inset

 : P(
\begin_inset Formula $|\overline{X}-\mu$
\end_inset

|>
\begin_inset Formula $\epsilon$
\end_inset

) 
\begin_inset Formula $\leq\frac{(\sigma(\overline{X}))^{2}}{\epsilon^{2}}=\frac{\sigma^{2}}{n\epsilon^{2}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\epsilon=t\sigma(\overline{X})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $t=\frac{\epsilon}{\sigma(\overline{X})}$
\end_inset


\end_layout

