\begin_layout Standard
entonces en la muestra se evaluará 
\begin_inset Formula $\hat{p}$
\end_inset

(la proporción muestral)
\end_layout

\begin_layout Standard
Recuerdo : E(
\begin_inset Formula $\hat{p}$
\end_inset

)=
\begin_inset Formula $\text{p}$
\end_inset


\end_layout

\begin_layout Standard
V(
\begin_inset Formula $\hat{p}$
\end_inset

) = 
\begin_inset Formula $\frac{p(1-p)}{n}$
\end_inset


\end_layout

\begin_layout Standard
Z = 
\begin_inset Formula $\frac{\hat{p}-p}{\sqrt{\frac{p(1-p)}{n}}}\approx N(0,1)$
\end_inset


\end_layout

\begin_layout Standard
aprox normal de la binomial
\end_layout

\begin_layout Standard
Si H
\begin_inset Formula $_{0}$
\end_inset

 es verdadera (p=p
\begin_inset Formula $_{0}$
\end_inset

) 
\end_layout

\begin_layout Standard
Z = 
\begin_inset Formula $\frac{\hat{p}-p_{0}}{\sqrt{\frac{p_{0}(1-p_{0})}{n}}}$
\end_inset


\end_layout

